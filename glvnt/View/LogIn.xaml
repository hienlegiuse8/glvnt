<Window x:Class="glvnt.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:glvnt"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        KeyDown="LogIn_KeyDown"
        Title="GLV Nam Thai" Height="350" Width="525">
    <Grid>
        <Label x:Name="label" Content="Username" HorizontalAlignment="Left" Margin="55,60,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Password" HorizontalAlignment="Left" Margin="55,106,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Sign In" HorizontalAlignment="Left" Margin="55,159,0,0" VerticalAlignment="Top" Width="75" Click="SignIn_Click"/>
        <TextBox x:Name="username" HorizontalAlignment="Left" Height="23" Margin="134,61,0,0" TextWrapping="Wrap" Text="hienle" VerticalAlignment="Top" Width="282"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Height="23" Margin="134,107,0,0" VerticalAlignment="Top" Width="282"/>
    </Grid>
</Window>
